{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "..",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/themes/next-star/components/*"],
      "@/lib/*": ["./src/themes/next-star/lib/*"],
      "@/hooks/*": ["./src/themes/next-star/hooks/*"],
      "@/i18n/*": ["./src/themes/next-star/i18n/*"],
      "@/theme/*": ["./src/themes/next-star/*"]
    },
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext"],
    "types": ["@cloudflare/workers-types"]
  },
  "include": [
    "**/*.ts"
  ]
}
